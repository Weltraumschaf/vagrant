Vagrant.configure("2") do |config|
    config.vagrant.plugins = ["vagrant-vbguest"]

    config.vm.box = "debian/buster64"
    config.vm.hostname = "debian-local"
    config.vm.synced_folder ENV["HOME"], '/home/vagrant/host'
    config.vm.provision :shell, path: "provision_as_root.sh"
    config.vm.provision :shell, privileged: false, path: "provision_as_vagrant.sh"

    if Vagrant.has_plugin?("vagrant-vbguest")
        config.vbguest.no_install = false
    end
end
